#define _GNU_SOURCE

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
  char *line = NULL;
  size_t length = 0;

  printf("Please enter some text: ");
  ssize_t lines = getline(&line, &length, stdin);

  if (lines == -1) {
    perror("getline error\n");
    free(line);
    return -1;
  }
  printf("\nTokens:\n");

  char *word = strtok(line, " ");
  while (word != NULL) {
    printf("%s\n", word);
    strtok(NULL, " ");
  }

  free(line);
  return 0;
}
